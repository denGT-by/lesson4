Console.Write("Введите своё имя: ");
string name = Console.ReadLine();

Console.WriteLine();
Console.Write("Введите свой возраст: ");
//Решил что данные возраста должны хранится как число, не как текст поэтому заменил string на int
int age = Convert.ToInt32(Console.ReadLine());

Console.WriteLine();
Console.Write($"Благодарим, {name} ({age}), за введенную информацию! Очень важный спам будет отправляться вам на почту!");
